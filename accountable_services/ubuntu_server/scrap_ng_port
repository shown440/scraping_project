server {
    server_name scrap.sebpo.com;

    # Increase the max allowed file size to 100MB
    client_max_body_size 100M;

    # Increase timeout limits
    proxy_read_timeout 600s;        # Increase the time Nginx waits for a response from Gunicorn
    client_body_timeout 600s;       # Increase the time Nginx waits for the body from client
    send_timeout 600s; 

    access_log /var/log/nginx/scrap_webservice_port_access.log;
    error_log /var/log/nginx/scrap_webservice_port_error.log;

    location / {
        include proxy_params;
        proxy_pass http://127.0.0.1:8008/;
    }

    location /static {
        alias /var/www/prod/scraping_project/static;
    }

    location /media {
        alias /var/www/prod/scraping_project/media;
    }

    listen 443 ssl; # managed by Certbot
    


    ssl_certificate /etc/letsencrypt/live/scrap.sebpo.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/scrap.sebpo.com/privkey.pem; # managed by Certbot
}

server {
    if ($host = scrap.sebpo.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name scrap.sebpo.com;
    return 404; # managed by Certbot


}